@model Entidades.TRANSACCION

@{
    ViewBag.Title = "Tranferencia";
}

<br />
<h4>Transferencia a cuenta</h4>
<hr />
<br />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.ID_CUENTA_DEPOSITO, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10 p-0 w-25">
                <input value="@ViewBag.Cuenta" class="form-control" name="ID_CUENTA_DEPOSITO" readonly/>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ID_CUENTA_ENVIO, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10 p-0 w-25">
                @Html.EditorFor(model => model.ID_CUENTA_ENVIO, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ID_CUENTA_ENVIO, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DINERO, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10 p-0 w-25">
                @Html.EditorFor(model => model.DINERO, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DINERO, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <br />
                <input type="submit" value="Depositar" class="btn btn-outline-dark" />
                <a class="btn btn-outline-primary" href="/Cliente/Cuentas">Volver</a>

            </div>
        </div>
    </div>
}
