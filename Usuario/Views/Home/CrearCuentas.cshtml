@model Entidades.CUENTAS

@{
    ViewBag.Title = "CrearCuentas";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal p-3">
    <h2>Crear Cuentas</h2>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @Html.LabelFor(model => model.Numero, htmlAttributes: new { @class = "control-label col-md-2" })

    <div class="form-group">
        <div class="col-md-10 p-0 w-25">
            @Html.EditorFor(model => model.Numero, new { htmlAttributes = new { @class = "form-control", @id = "Numero" } })
            @Html.ValidationMessageFor(model => model.Numero, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Cedula, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10  p-0 w-25">
            @Html.EditorFor(model => model.Cedula, new { htmlAttributes = new { @class = "form-control", @id = "Cedula" } })
            @Html.ValidationMessageFor(model => model.Cedula, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
       <label>Balance</label>
        <div class="col-md-10  p-0 w-25">
            @Html.EditorFor(model => model.Balance, new { htmlAttributes = new { @class = "form-control", @id = "Balance", @onkeyup = "resultado()" } })
            @Html.ValidationMessageFor(model => model.Balance, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label>Balance disponible</label>

        <div class="col-md-10  p-0 w-25">
            @Html.EditorFor(model => model.Monto_Limite, new { htmlAttributes = new { @class = "form-control", @id = "Monto",@readonly = "readonly" } })
            @Html.ValidationMessageFor(model => model.Monto_Limite, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <br />
            <input type="submit" value="Crear" class="btn btn-outline-dark " />
            <a class="btn btn-outline-primary" href="/Home/Administracion">Volver a Inicio</a>
        </div>
    </div>
</div>
}

<script>

    function resultado() {

        let balance = document.getElementById('Balance').value;

        total = parseInt(balance);

        document.getElementById('Monto').value = total;

    }

</script>

